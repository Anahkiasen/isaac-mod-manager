{
  "name": "anahkiasen/isaac-mod-manager",
  "description": "IMM is a cross-plateform CLI-tool to manage your Workshop mods for Binding of Isaac",
  "license": "MIT",
  "keywords": [
    "isaac",
    "mods"
  ],
  "authors": [
    {
      "name": "Maxime Fabre",
      "email": "ehtnam6@gmail.com",
      "homepage": "http://about.me/anahkiasen"
    }
  ],
  "require": {
    "php": ">=7.0",
    "cache/filesystem-adapter": "^0.3.3",
    "cache/simple-cache-bridge": "^0.1.0",
    "kherge/box": "^2.7",
    "league/container": "^2.4",
    "league/flysystem": "^1.0",
    "league/tactician": "^1.0",
    "symfony/console": "^3.2",
    "symfony/process": "^3.2",
    "tightenco/collect": "^5.4"
  },
  "require-dev": {
    "cache/array-adapter": "^0.4.2",
    "escapestudios/symfony2-coding-standard": "^2.10",
    "league/flysystem-vfs": "^1.0",
    "madewithlove/php-cs-fixer-config": "^1.2",
    "phpunit/phpunit": "^6.0",
    "symfony/var-dumper": "^3.2"
  },
  "autoload": {
    "files": ["src/helpers.php"],
    "psr-4": {
      "Isaac\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Isaac\\": "tests"
    }
  },
  "bin": [
    "bin/imm"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "scripts": {
    "build": ["composer update --no-dev", "box build -vvv"],
    "check-style": "phpcs",
    "fix-style": ["php-cs-fixer fix", "phpcbf"],
    "test": "phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
